# This is a configuration file for keactrl script which controls
# the startup, shutdown, reconfiguration and gathering the status
# of the Kea's processes.

# prefix holds the location where the Kea is installed.
prefix=/kea/{{test}}

# Location of Kea configuration files.
kea_dhcp4_config_file=${prefix}/v4_{{test}}.conf
kea_dhcp6_config_file=${prefix}/v6_{{test}}.conf


# Location of Kea binaries.
exec_prefix=/usr/local
dhcp4_srv=${exec_prefix}/sbin/kea-dhcp4
dhcp6_srv=${exec_prefix}/sbin/kea-dhcp6
dhcp_ddns_srv=${exec_prefix}/sbin/kea-dhcp-ddns
ctrl_agent_srv=${exec_prefix}/sbin/kea-ctrl-agent

# Start DHCPv4 server?
dhcp4=yes

# Start DHCPv6 server?
dhcp6=no

# Start DHCP DDNS server?
dhcp_ddns=no

# Start Control Agent?
ctrl_agent=no

# Be verbose?
kea_verbose=no
